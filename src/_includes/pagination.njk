{%- if pagination.pages.length > 1 %}
  <div class="flex items-center justify-center border-t border-gray-200 px-4 py-3 sm:px-6 mx-auto">
    <div class="flex flex-1 justify-between sm:hidden">
      {% if pagination.href.previous %}
        <a href="{{ pagination.href.previous }}" class="relative inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium
                                                                                                                                                        text-gray-700 hover:bg-gray-50">
          Previous</a>
      {% else %}
        <span class="relative inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium
            text-gray-700 hover:bg-gray-50">
          Previous</span>
      {% endif %}
      {% if pagination.href.next %}
        <a href="{{ pagination.href.next }}" class="relative ml-3 inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium
                                                                                                                                                        text-gray-700 hover:bg-gray-50">
          Next</a>
      {% else %}
        <span class="relative inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium
            text-gray-700 hover:bg-gray-50">
          Next</span>
      {% endif %}
    </div>
    <div>
      <nav class="isolate inline-flex -space-x-px rounded-md shadow-sm" aria-label="Pagination">
        {% if pagination.href.previous %}
          <a href="{{ pagination.href.previous }}" class="relative inline-flex items-center rounded-l-md px-2 py-2 text-gray-400 ring-1 ring-inset ring-gray-300 bg-white
                                                                                                                                                                                  hover:bg-gray-50 focus:z-20 focus:outline-offset-0">
            <span class="sr-only">Previous</span>
            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path
                fill-rule="evenodd"
                d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75
                  0 011.06.02z"
                clip-rule="evenodd"/>
            </svg>
          </a>
        {% else %}
          <span class="relative inline-flex items-center rounded-l-md px-2 py-2 text-gray-400 ring-1 ring-inset ring-gray-300 bg-white
              hover:bg-gray-50 focus:z-20 focus:outline-offset-0">
            <span class="sr-only">Previous</span>
            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path
                fill-rule="evenodd"
                d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75
                  0 011.06.02z"
                clip-rule="evenodd"/>
            </svg>
          </span>
        {% endif %}
        {%- for pageEntry in pagination.pages %}
          <a href="{{ pagination.hrefs[ loop.index0 ] }}" {% if page.url == pagination.hrefs[ loop.index0 ] %} aria-current="page" class="relative z-10 inline-flex items-center bg-sky-600 px-4 py-2 text-sm font-semibold text-white focus:z-20 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-sky-600" {% else %} class="relative hidden items-center px-4 py-2 text-sm font-semibold text-gray-900 ring-1 ring-inset ring-gray-300 bg-white hover:bg-gray-50 focus:z-20 focus:outline-offset-0 md:inline-flex" {% endif %}>
            {{ loop.index }}</a>
        {%- endfor %}
        {% if pagination.href.next %}
          <a href="{{ pagination.href.next }}" class="relative inline-flex items-center rounded-r-md px-2 py-2 text-gray-400 ring-1 ring-inset ring-gray-300 bg-white
                                                                                                                                                                                  hover:bg-gray-50 focus:z-20 focus:outline-offset-0">
            <span class="sr-only">Next</span>
            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path
                fill-rule="evenodd"
                d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0
                  01-1.06-.02z"
                clip-rule="evenodd"/>
            </svg>
          </a>
        {% else %}
          <span class="relative inline-flex items-center rounded-r-md px-2 py-2 text-gray-400 ring-1 ring-inset ring-gray-300 bg-white
              hover:bg-gray-50 focus:z-20 focus:outline-offset-0">
            <span class="sr-only">Next</span>
            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path
                fill-rule="evenodd"
                d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0
                  01-1.06-.02z"
                clip-rule="evenodd"/>
            </svg>
          </span>
        {% endif %}
      </nav>
    </div>
  </div>
</div>{%- endif %}